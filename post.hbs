{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}

<div class="container" itemscope="" itemtype="http://schema.org/BlogPosting">
    <div class="row">
        <div class="col-lg-12">
        {{#post}}
            {{#if image}}
                <header class="main-header post-head">
                    <img class="img-responsive" src="{{image}}" alt="{{title}}" nopin="nopin" itemprop="image"/>
                </header>
                <br/>
            {{/if}}
            <main class="content" role="main">
                <article class="{{post_class}}" >

                    <header class="post-header">
                        <h1 class="post-title" itemprop="name headline">{{title}}</h1>
                        <section class="post-meta">
                            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}" itemprop="datePublished">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" on "}}
                        </section>
                    </header>

                    <section class="post-content" itemprop="articleBody">
                        {{content}}
                    </section>
                    <hr/>
                    <footer class="post-footer">

                        <section class="share">
                            <h4>Share this post</h4>
                            <a itemprop="url" class="fa fa-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                               onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                <span class="hidden">Twitter</span>
                            </a>
                            <a itemprop="url" class="fa fa-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                               onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                                <span class="hidden">Facebook</span>
                            </a>
                            <a itemprop="url" class="fa fa-google" href="https://plus.google.com/share?url={{url absolute="true"}}"
                               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                                <span class="hidden">Google+</span>
                            </a>
                        </section>

                    </footer>

                </article>

                {{#author}}
                <section class="author" itemprop="author" itemscope="" itemtype="http://schema.org/Person">
                    {{#if image}}<img class="img-responsive author-thumb" src="{{image}}" alt="{{name}}" nopin="nopin" />{{/if}}
                    <h4 itemprop="name"><a href="{{url}}" rel="author">{{name}}</a></h4>

                    {{#if bio}}
                        <p>{{bio}}</p>
                    {{else}}
                        <p>Read <a href="{{url}}">more posts</a> by this author.</p>
                    {{/if}}
                    <div class="author-meta">
                        {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
                        {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
                    </div>
                </section>
                {{/author}}
            </main>
        </div>
    </div>
    <div class="row">
        <aside class="read-next col-lg-12">
            {{#next_post}}
                <a class="read-next-story" href="{{url}}" itemprop="url">
                    <section class="post col-lg-6">
                        <h2>{{title}}</h2>
                        <p>{{excerpt words="19"}}&hellip;</p>
                    </section>
                </a>
            {{/next_post}}
            {{#prev_post}}
                <a class="read-next-story prev" href="{{url}}" itemprop="url">
                    <section class="post col-lg-6">
                        <h2>{{title}}</h2>
                        <p>{{excerpt words="19"}}&hellip;</p>
                    </section>
                </a>
            {{/prev_post}}
        </aside>
        {{/post}}
    </div>
    <br/>
    <div class="row">
        <div class="col-lg-12">
            <div id="disqus_thread" itemprop="comment"></div>
        </div>
    </div>
</div>
