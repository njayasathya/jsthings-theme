<div class="container">
    <div class="row">
        <nav class="pagination" role="navigation" itemscope itemtype="http://schema.org/SiteNavigationElement/Pagination">
            {{#if prev}}
                <a class="newer-posts pull-left" href="{{page_url prev}}" rel="prev">
                    <i class="fa fa-chevron-left"></i>
                    New posts
                </a>
            {{/if}}
            {{#if next}}
                <a class="older-posts pull-right" href="{{page_url next}}" rel="next">
                    Old posts
                    <i class="fa fa-chevron-right"></i>
                </a>
            {{/if}}
        </nav>
    </div>
</div>